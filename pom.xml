    <name>CQL Language Server</name>
    <description>A Languager Server for CQL implementing the LSP</description>
    <url>https://github.com/DBCG/cql-language-server/tree/master</url>

    <properties>
        <version.major>1</version.major>
        <version.minor>2</version.minor>
        <version.patch>0</version.patch>
